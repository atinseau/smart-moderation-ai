{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": [
      "bun-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/services/*": [
        "./src/core/services/*"
      ],
      "@/enums/*": [
        "./src/core/enums/*"
      ],
      "@/application": [
        "./src/index.ts"
      ]
    }
  }
}
